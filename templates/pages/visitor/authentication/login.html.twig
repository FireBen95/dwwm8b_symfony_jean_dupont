{% extends 'themes/base_visitor.html.twig' %}

{% block title %} - Connexion{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Connexion</h1>

    <div class="container">
        <div class="row">
            <div class="col-md-8 col-lg-6 mx-auto shadow p-4 bg-white">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}


                    <div class="mb-3">
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" class="form-control" autocomplete="">
                    </div>

                    <div class="mb-3">
                        <label for="inputEmail">Mot de passe</label>
                        <input type="password" value="" name="password" class="form-control">
                    </div>
                    
                    <div class="mb-3">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >
                    </div>
                    <div class="mb-3">
                            {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html #}
                            <label>
                                <input type="checkbox" name="_remember_me"> Se souvenir de moi
                            </label>
                    </div>
                    <div class="mb-3">
                        <button formnovalidate class="btn btn-lg btn-primary" type="submit">Me connecter</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
